<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <style>
      body{
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        background: #fff;
      }
      h1{
        color: crimson;
        text-align: center;
      }

      form{
        width: 30rem;
        margin: 0 auto;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 1rem;
        border-radius: 10px;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
      }
      label{
        text-align: center;
        color: #757575;
        font-size: 1.5rem;
        font-weight: 700;
        padding: 1rem;
      }
      label::after{
        content: "*";
        color: red;
      }

      input{
        box-shadow: 1px 2px 5px rgba(0, 0, 0, 0.3);
        outline: none;
        background: transparent;
        color: #757575;
        border: none;
        width: 25rem;
        height: 2.5rem;
        text-align: center;
        font-size: 1rem;
        border-radius: 10px;
        margin: 1rem;
      }
      button{
        font-size: 1.3rem;
        color: #757575;
        background-color: transparent;
        border-radius: 5px;
        box-shadow: 1px 2px 5px rgba(0, 0, 0, 0.3);
        border: none;
        cursor: pointer;
        margin: 1rem;
      }
      span{
        font-size: 1.2rem;
        color: #757575;
      }

      a{
        text-decoration: none;
        font-size: 1.2rem;
        color: blue;
      }

      .result{
        padding: 1.5rem;
      }
    </style>
  </head>
  <body>
    <form action="api/v1/url" method="post">
      <h1>Home Page</h1>
      <label>Enter Your Original URL</label>
      <input type="text" name="url" placeholder="https://example.com" id="">
      <button type="submit">Generate</button>
    </form>
    <% if (locals.id) { %>
      <div class="result">
        <span>Generated ID:</span>
        <a href="http://localhost:3000/api/v1/<%= id %>" target="_blank"><%= id %></a>
     </div>
    <% } %>
    <% if (locals.urls) { %>
     <div style="margin: 1rem;">
      <table>
        <thead>
          <th>Sr No.</th>
          <th>ShortID</th>
          <th>RedirectURL</th>
          <th>Clicks</th>
        </thead>
        <tbody>
             <% urls.forEach((url, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= url.shortId %></td>
                <td><%= url.redirectURL %></td>
                <td><%= url.visitHistory.length %></td>
              </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
    <% } %>
  </body>
  </html>

